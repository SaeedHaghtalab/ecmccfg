record(ai,"$(P)Pos-Alm"){
  field(DESC, "$(HWTYPE): Enc Act Pos alarm (Raw)")
  field(PINI, "$(PINI=1)")
  field(DTYP, "asynInt32")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynInt32/ec0.s3.CH1_VALUE?")
  field(SCAN, "I/O Intr")
  field(LINR, "$(LINR=SLOPE)")
  field(ESLO, "$(ESLO=1)")
  field(EOFF, "$(EOFF=0)")
  field(EGU,  "$(EGU=mm)")
  field(PREC, "$(PREC=7)")
  field(LOW,  "$(LOW=-10)")
  field(LOLO, "$(LOLO=-12)")
  field(HIGH, "$(HIGH=10)")
  field(HIHI, "$(HIHI=12)")
  field(HYST, "$(HYST=0)")
  field(LLSV, "$(LLSV=MAJOR)")
  field(LSV,  "$(LSV=MINOR)")
  field(HSV,  "$(HSV=MINOR)")
  field(HHSV, "$(HHSV=MAJOR)")
  field(TSE,  "$(TSE=-2)")
}
